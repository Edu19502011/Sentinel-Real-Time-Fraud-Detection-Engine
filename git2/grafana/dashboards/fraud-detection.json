{
  "dashboard": {
    "title": "Fraud Detection Engine",
    "tags": ["fraud", "real-time"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Transactions per Second",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(fraud_approved_total[1m]) + rate(fraud_blocked_total[1m])",
            "legendFormat": "Total TPS"
          }
        ]
      },
      {
        "id": 2,
        "title": "Fraud Detection Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(fraud_blocked_total[5m]) / (rate(fraud_approved_total[5m]) + rate(fraud_blocked_total[5m])) * 100",
            "legendFormat": "Fraud %"
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 latency"
          }
        ]
      },
      {
        "id": 4,
        "title": "Approved vs Blocked",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "fraud_approved_total",
            "legendFormat": "Approved"
          },
          {
            "expr": "fraud_blocked_total",
            "legendFormat": "Blocked"
          }
        ]
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    }
  }
}
